#:import dp kivy.metrics.dp

<CarrinhoScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(12)
        spacing: dp(10)

        # header (estilo similar ao wireframe)
        BoxLayout:
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(8)
            canvas.before:
                Color:
                    rgba: 0.07, 0.57, 0.38, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: " Voltar"
                size_hint_x: None
                width: dp(80)
                background_normal: ''
                background_color: 0.9,0.9,0.9,1
                color: 0,0,0,1
                on_release:
                    root.voltar()
            Label:
                text: "Meu Carrinho"
                color: 1,1,1,1
                bold: True
                font_size: '18sp'
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: carrinho_lista
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(6)

        BoxLayout:
            size_hint_y: None
            height: dp(70)
            spacing: dp(8)
            Button:
                text: "Continuar Comprando"
                on_release:
                    app.root.transition.direction = "right"
                    app.root.current = "home"
            Button:
                text: "Finalizar Compra"
                background_normal: ''
                background_color: 0,0.6,0,1
                color: 1,1,1,1
                on_release:
                    # aqui pode ir a l√≥gica de checkout
                    app.root.current = "home"
